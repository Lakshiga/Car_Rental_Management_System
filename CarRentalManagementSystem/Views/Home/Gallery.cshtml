@section Scripts {
    <script>
        // Handle gallery item clicks
        $('.modern-gallery-item, .gallery-item').on('click', function() {
            const imageSrc = $(this).data('image');
            const title = $(this).data('title');
            const description = $(this).data('description');

            $('#modalImage').attr('src', imageSrc);
            $('#imageModalTitle').text(title);
            $('#imageDescription').text(description);
        });

        // Add animation to gallery items
        $(document).ready(function() {
            $('.modern-gallery-item').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
                $(this).addClass('fade-in');
            });
        });

        // Tab switching animation
        $('button[data-bs-toggle="pill"]').on('shown.bs.tab', function (e) {
            const target = $(e.target).attr('data-bs-target');
            $(target + ' .modern-gallery-item, ' + target + ' .video-card, ' + target + ' .story-card').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
                $(this).addClass('slide-up');
            });
        });

        // Handle image loading errors
        $('img').on('error', function() {
            $(this).attr('src', '/images/placeholder.jpg');
        });
    </script>
}