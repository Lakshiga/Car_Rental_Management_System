@{
    ViewData["Title"] = "About Us";
}

<!-- About Hero Section -->
<div class="modern-hero about-hero">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i data-lucide="info" class="hero-icon"></i>
                        About CarRentalPro
                    </h1>
                    <p class="hero-subtitle">Your trusted partner for reliable, affordable, and convenient car rental services since 2020.</p>
                    <div class="hero-stats">
                        <div class="stat-item">
                            <div class="stat-number">5000+</div>
                            <div class="stat-label">Happy Customers</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">50+</div>
                            <div class="stat-label">Premium Cars</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">4.9</div>
                            <div class="stat-label">Star Rating</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="hero-visual">
                    <div class="hero-circle">
                        <i data-lucide="car" class="hero-main-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Information -->
<div class="modern-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4">
                <div class="content-block">
                    <div class="section-badge">
                        <i data-lucide="building" class="badge-icon"></i>
                        <span>Our Story</span>
                    </div>
                    <h2 class="section-title">Building Trust Since 2020</h2>
                    <div class="section-content">
                        <p class="mb-3">
                            Founded in 2020, CarRentalPro has been at the forefront of providing exceptional car rental
                            services to customers across the region. Our mission is to make car rental accessible, affordable,
                            and hassle-free for everyone.
                        </p>
                        <p class="mb-3">
                            We started with a small fleet of 10 vehicles and have grown to become one of the most trusted
                            car rental companies, serving thousands of satisfied customers with our diverse fleet of
                            well-maintained vehicles.
                        </p>
                        <p class="mb-4">
                            Our commitment to excellence, customer satisfaction, and innovation has made us the preferred
                            choice for both business and leisure travelers.
                        </p>
                        <div class="feature-list">
                            <div class="feature-item">
                                <i data-lucide="check-circle" class="feature-icon"></i>
                                <span>24/7 Customer Support</span>
                            </div>
                            <div class="feature-item">
                                <i data-lucide="shield-check" class="feature-icon"></i>
                                <span>Fully Insured Vehicles</span>
                            </div>
                            <div class="feature-item">
                                <i data-lucide="star" class="feature-icon"></i>
                                <span>Premium Service Quality</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="image-container">
                    <img src="~/images/about-company.jpg" alt="Our Company" class="modern-image">
                    <div class="image-overlay">
                        <div class="overlay-content">
                            <i data-lucide="play-circle" class="play-icon"></i>
                            <span>Watch Our Journey</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mission & Vision -->
<div class="mission-vision-section">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Our Purpose & Direction</h2>
                <p class="section-subtitle">Guided by our core values and future aspirations</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="mission-card">
                    <div class="mission-icon-wrapper">
                        <i data-lucide="target" class="mission-icon"></i>
                    </div>
                    <div class="mission-content">
                        <h3 class="mission-title">Our Mission</h3>
                        <p class="mission-text">
                            To provide safe, reliable, and affordable car rental services while ensuring
                            exceptional customer experience and building long-lasting relationships.
                        </p>
                        <div class="mission-highlights">
                            <span class="highlight-tag">Safe</span>
                            <span class="highlight-tag">Reliable</span>
                            <span class="highlight-tag">Affordable</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="vision-card">
                    <div class="vision-icon-wrapper">
                        <i data-lucide="eye" class="vision-icon"></i>
                    </div>
                    <div class="vision-content">
                        <h3 class="vision-title">Our Vision</h3>
                        <p class="vision-text">
                            To be the leading car rental company recognized for innovation, sustainability,
                            and outstanding service quality in the automotive rental industry.
                        </p>
                        <div class="vision-highlights">
                            <span class="highlight-tag">Innovation</span>
                            <span class="highlight-tag">Sustainability</span>
                            <span class="highlight-tag">Excellence</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services -->
<div class="services-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <div class="section-badge">
                    <i data-lucide="settings" class="badge-icon"></i>
                    <span>Our Services</span>
