@model IEnumerable<CarRentalManagementSystem.DTOs.BookingResponseDTO>
@{
    ViewData["Title"] = "Booking History";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-history me-2"></i>Booking History</h2>
            <div class="btn-group" role="group">
                <button class="btn btn-outline-secondary" onclick="exportHistory()">
                    <i class="fas fa-download me-1"></i>Export
                </button>
                <button class="btn btn-outline-secondary" onclick="filterHistory()">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
            </div>
        </div>
        
        @if (Model.Any())
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Booking ID</th>
                                    <th>Customer</th>
                                    <th>Car</th>
                                    <th>Booking Date</th>
                                    <th>Rental Period</th>
                                    <th>Status</th>
                                    <th>Total Cost</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model)
                                {
                                    <tr>
                                        <td><strong>#@booking.BookingID</strong></td>
                                        <td>@booking.CustomerName</td>
                                        <td>@booking.CarDetails.CarName</td>
                                        <td>@booking.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <small class="text-muted">
                                                @booking.PickupDate.ToString("MMM dd") - @booking.ReturnDate.ToString("MMM dd, yyyy")
                                                <br>(@((booking.ReturnDate - booking.PickupDate).Days) days)
                                            </small>
                                        </td>
                                        <td>
                                            @if (booking.Status == "Returned" || booking.Status == "Completed")
                                            {
                                                <span class="badge bg-success">@booking.Status</span>
                                            }
                                            else if (booking.Status == "Cancelled")
                                            {
                                                <span class="badge bg-secondary">@booking.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">@booking.Status</span>
                                            }
                                        </td>
                                        <td><strong>$@booking.TotalCost.ToString("F2")</strong></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-primary" onclick="viewBookingDetails(@booking.BookingID)">
                                                    <i class="fas fa-eye"></i> View
                                                </button>
                                                <button class="btn btn-sm btn-outline-secondary" onclick="downloadReceipt(@booking.BookingID)">
                                                    <i class="fas fa-receipt"></i> Receipt
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No booking history found</h4>
                <p class="text-muted">No completed bookings to display yet.</p>
            </div>
        }
    </div>
</div>

<script>
    function viewBookingDetails(bookingId) {
        window.location.href = '@Url.Action("Details", "Booking")/' + bookingId;
    }
    
    function downloadReceipt(bookingId) {
        alert('Download receipt functionality to be implemented for booking: ' + bookingId);
    }
    
    function exportHistory() {
        alert('Export history functionality to be implemented');
    }
    
    function filterHistory() {
        alert('Filter history functionality to be implemented');
    }
</script>