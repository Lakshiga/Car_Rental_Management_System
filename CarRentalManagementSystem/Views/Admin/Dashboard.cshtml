@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4">
    <div>
        <h1 class="h2 mb-1" style="color: var(--admin-text); font-weight: 700;">Dashboard Overview</h1>
        <p class="text-muted mb-0">Welcome back! Here's what's happening with your car rental business.</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-admin-primary" onclick="exportRecentActivity()">
                <i class="fas fa-download me-2"></i> Export Data
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100 py-2">
            <div class="card-body">
                <div class="row g-0 align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Fleet</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.TotalFleet</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-car fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card success h-100 py-2">
            <div class="card-body">
                <div class="row g-0 align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Available Cars</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.AvailableCars</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card warning h-100 py-2">
            <div class="card-body">
                <div class="row g-0 align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Total Bookings</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.TotalBookings</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card danger h-100 py-2">
            <div class="card-body">
                <div class="row g-0 align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-danger text-uppercase mb-1">Pending Bookings</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.PendingBookings</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-xl-8 col-lg-7">
        <div class="card admin-card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-chart-line me-2"></i>Bookings Overview
                </h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="bookingsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5">
        <div class="card admin-card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-chart-pie me-2"></i>Car Status Distribution
                </h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="carStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-12">
        <div class="card admin-card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-history me-2"></i>Recent Activity
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table admin-table" id="recentActivityTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-clock me-1"></i>Time</th>
                                <th><i class="fas fa-tasks me-1"></i>Activity</th>
                                <th><i class="fas fa-user me-1"></i>User</th>
                                <th><i class="fas fa-info-circle me-1"></i>Status</th>
                                <th><i class="fas fa-cog me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentBookings != null && ((List<CarRentalManagementSystem.Models.Booking>)ViewBag.RecentBookings).Any())
                            {
                                @foreach (var booking in (List<CarRentalManagementSystem.Models.Booking>)ViewBag.RecentBookings)
                                {
                                    var timeAgo = DateTime.Now - booking.CreatedAt;
                                    string timeDisplay;
                                    if (timeAgo.TotalHours < 1)
                                        timeDisplay = $"{(int)timeAgo.TotalMinutes} minutes ago";
                                    else if (timeAgo.TotalDays < 1)
                                        timeDisplay = $"{(int)timeAgo.TotalHours} hours ago";
                                    else
                                        timeDisplay = $"{(int)timeAgo.TotalDays} days ago";

                                    string statusClass = booking.Status switch
                                    {
                                        "Pending" => "bg-warning text-dark",
                                        "Approved" => "bg-success",
                                        "Rejected" => "bg-danger",
                                        "Completed" => "bg-info",
                                        _ => "bg-secondary"
                                    };

                                    <tr>
                                        <td><span class="text-muted">@timeDisplay</span></td>
                                        <td><strong>New booking request</strong></td>
                                        <td>@booking.Customer?.FullName</td>
                                        <td><span class="badge @statusClass">@booking.Status</span></td>
                                        <td><button class="btn btn-sm btn-admin-secondary" onclick="viewBookingDetails(@booking.BookingID)">View</button></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No recent activity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Bookings Chart
        const bookingsCtx = document.getElementById('bookingsChart').getContext('2d');
        const bookingsChart = new Chart(bookingsCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Bookings',
                    data: [12, 19, 3, 5, 2, 3],
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Car Status Chart
        const carStatusCtx = document.getElementById('carStatusChart').getContext('2d');
        const carStatusChart = new Chart(carStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Available', 'Rented', 'Maintenance'],
                datasets: [{
                    data: [@ViewBag.AvailableCars, @(ViewBag.TotalFleet - ViewBag.AvailableCars), 2],
                    backgroundColor: ['#28a745', '#007bff', '#ffc107']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });

        // Export Recent Activity function
        function exportRecentActivity() {
            // Get the table data
            const table = document.getElementById('recentActivityTable');
            const rows = table.querySelectorAll('tbody tr');
            
            // Create CSV content
            let csvContent = "Time,Activity,User,Status\n";
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const rowData = Array.from(cells).map(cell => {
                    // Get text content and remove extra whitespace
                    let text = cell.textContent.trim();
                    // Remove badge styling text if present
                    text = text.replace(/Pending|Completed|System/g, '').trim();
                    // Add back the status text
                    if (cell.querySelector('.badge.bg-warning')) text += 'Pending';
                    if (cell.querySelector('.badge.bg-success')) text += 'Completed';
                    if (cell.querySelector('.badge.bg-info')) text += 'System';
                    return `"${text}"`;
                }).join(',');
                csvContent += rowData + '\n';
            });
            
            // Create download link
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.setAttribute('href', url);
            link.setAttribute('download', 'recent_activity_export.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // View Activity Details function
        function viewActivityDetails(activityId) {
            alert('View details for activity ID: ' + activityId + '. This would show more detailed information about the activity.');
            // In a real implementation, this would load detailed information about the activity
        }

        // View booking details function
        function viewBookingDetails(bookingId) {
            // Redirect to booking details page
            window.location.href = '@Url.Action("Bookings", "Admin")' + '?bookingId=' + bookingId;
        }
    </script>
}