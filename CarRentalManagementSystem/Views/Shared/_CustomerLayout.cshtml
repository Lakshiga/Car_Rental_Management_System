<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>
<body>
    @{ 
        var avatarUrl = Context.Session.GetString("AvatarUrl");
        var customerName = Context.Session.GetString("CustomerName") ?? (ViewBag.CustomerName as string) ?? "Customer";
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark customer-navbar fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Customer" asp-action="Dashboard">
                    <i data-lucide="car" class="me-2"></i> CarRentalPro
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#custNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="custNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="MyBookings">My Bookings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="BrowseCars">Browse Cars</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <div class="profile-avatar me-2">
                                    @if (!string.IsNullOrEmpty(avatarUrl))
                                    {
                                        <img src="@avatarUrl" alt="avatar" class="avatar-img" />
                                    }
                                    else
                                    {
                                        <i data-lucide="user" class="profile-icon"></i>
                                    }
                                </div>
                                <span class="profile-name">@customerName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i data-lucide="user" class="me-2"></i>Profile
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i data-lucide="log-out" class="me-2"></i>Logout
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function(){ lucide.createIcons(); });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


