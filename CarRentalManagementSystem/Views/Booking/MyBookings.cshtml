@model IEnumerable<BookingResponseDTO>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="customer-dashboard">
    <!-- Page Header -->
    <div class="customer-page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1><i data-lucide="calendar" style="width: 32px; height: 32px; display: inline-block; vertical-align: middle; margin-right: 12px;"></i> My Bookings</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Customer")">Dashboard</a></li>
                                    <li class="breadcrumb-item active">My Bookings</li>
                                </ol>
                            </nav>
                        </div>
                        <div>
                            <a href="@Url.Action("BrowseCars", "Home")" class="btn btn-customer-primary">
                                <i data-lucide="plus" style="width: 18px; height: 18px; display: inline-block; vertical-align: middle; margin-right: 8px;"></i> New Booking
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <div class="row">
            <div class="col-12">

                @if (!Model.Any())
                {
                    <div class="customer-card">
                        <div class="card-body text-center py-5">
                            <i data-lucide="calendar-x" style="width: 64px; height: 64px; margin: 0 auto 24px auto; display: block; color: var(--customer-primary);"></i>
                            <h4 style="color: var(--customer-dark);">No Bookings Found</h4>
                            <p class="text-muted mb-4">You haven't made any bookings yet. Start your journey by browsing our premium car collection.</p>
                            <a href="@Url.Action("BrowseCars", "Home")" class="btn btn-customer-primary">
                                <i data-lucide="car" style="width: 18px; height: 18px; display: inline-block; vertical-align: middle; margin-right: 8px;"></i> Browse Cars
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var booking in Model)
                        {
                            <div class="col-lg-6 col-xl-4 mb-4">
                                <div class="customer-card h-100">
                                    <img src="@(booking.CarDetails.ImageUrl ?? "/images/default-car.jpg")"
                                         class="card-img-top" alt="@booking.CarDetails.CarName"
                                         style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0" style="color: var(--customer-dark);">@booking.CarDetails.CarName</h5>
                                            <span class="badge @(booking.Status == "Pending" ? "bg-warning" :
                                                                booking.Status == "Approved" ? "bg-success" :
                                                                booking.Status == "Rejected" ? "bg-danger" :
                                                                booking.Status == "Rented" ? "bg-info" : "bg-secondary")">
                                                @booking.Status
                                            </span>
                                        </div>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                @booking.CarDetails.Brand • @booking.CarDetails.NumberPlate
                                            </small>
                                        </p>
                                        <div class="booking-details">
                                            <p class="mb-1">
                                                <i class="fas fa-calendar-alt" style="color: var(--customer-primary);"></i>
                                                <strong>Pickup:</strong> @booking.PickupDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <p class="mb-1">
                                                <i class="fas fa-calendar-check" style="color: var(--customer-primary);"></i>
                                                <strong>Return:</strong> @booking.ReturnDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <p class="mb-1">
                                                <i class="fas fa-rupee-sign" style="color: var(--customer-primary);"></i>
                                                <strong>Total Cost:</strong> <span style="color: var(--customer-primary); font-weight: 700;">₹@booking.TotalCost</span>
                                            </p>
                                            <p class="mb-0">
                                                <i class="fas fa-clock text-muted"></i>
                                                <strong>Booked:</strong> @booking.CreatedAt.ToString("MMM dd, yyyy")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <div class="d-grid">
                                            <a href="@Url.Action("Details", new { id = booking.BookingID })"
                                               class="btn btn-customer-primary">
                                                <i class="fas fa-eye"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>